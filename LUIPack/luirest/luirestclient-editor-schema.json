{
  "title":"Resources",
  "type":"array",
  "items":{
    "type":"object",
    "title":"Resource",
    "defaultProperties":[
      "Name",
      "Path",
      "Params"
    ],
    "headerTemplate":"{{self.Name}}",
    "properties":{
      "Name":{
        "type":"string"
      },
      "Path":{
        "type":"string"
      },
      "IdField":{
        "type":"string"
      },
      "CacheMode":{
        "type":"string"
      },
      "Params":{
        "type":"array",
        "propertyOrder":2000,
        "format":"tabs",
        "items":{
          "type":"object",
          "headerTemplate":"{{self.Name}}",
          "defaultProperties":[
            "Name"
          ],
          "format":"grid",
          "properties":{
            "Name":{
              "type":"string"
            },
            "Location":{
              "type":"string",
              "enum":[
                "plQuery",
                "plPath"
              ]
            },
            "DataType":{
              "type":"string",
              "enum":[
                "ftInteger",
                "ftString"
              ],
              "default":"ftString"
            },
            "Required":{
              "type":"boolean",
              "default":true
            }
          }
        }
      }
    }
  }
}